<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Pidor</servlet-name>
        <servlet-class>PidorServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>AreaCheckServlet</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>mainController</servlet-name>
        <servlet-class>mainController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Pidor</servlet-name>
        <url-pattern>/pidor</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern>/checkTheArea</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>mainController</servlet-name>
        <url-pattern>/mainController</url-pattern>
    </servlet-mapping>
</web-app>

